<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" android:state_enabled="true">
  <shape>
   <gradient  
    android:startColor="#FFC0CB" android:endColor="#FFE4E1"
    android:angle="270" />
   
   <stroke
    android:width="2dip" android:color="#FFFF00"/>
    
   <corners android:radius="5dip"/>
   
   <padding
    android:left="11dip"
    android:right="11dip"
    android:top="11dip"
    android:bottom="11dip" />
  </shape>
 </item>
 <item android:state_focused="true" android:state_enabled="true">
  <shape>
   <gradient  
    android:startColor="#FFC0CB" android:endColor="#FFE4E1"
    android:angle="270" />
   
   <stroke
    android:width="2dip" android:color="#E0FFFF"/>
    
   <corners android:radius="5dip"/>
   
   <padding
    android:left="11dip"
    android:right="11dip"
    android:top="11dip"
    android:bottom="11dip" />
  </shape>
 </item>
 <item android:state_enabled="false">
  <shape>
   <gradient  
    android:startColor="#FFC0CB" android:endColor="#FFE4E1"
    android:angle="270" />
    
   <corners android:radius="5dip"/>
   
   <padding
    android:left="11dip"
    android:right="11dip"
    android:top="11dip"
    android:bottom="11dip" />
  </shape>
 </item>
 <item android:state_enabled="true">
  <shape>
   <gradient  
    android:startColor="#FFC0CB" android:endColor="#FFE4E1"
    android:angle="270" />
   
   <stroke
    android:width="0.5dip" android:color="#FFFF00"/>
    
   <corners android:radius="5dip"/>
   
   <padding
    android:left="11dip"
    android:right="11dip"
    android:top="11dip"
    android:bottom="11dip" />
  </shape>
 </item>
</selector>