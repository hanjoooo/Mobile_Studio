<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khanj.trust.LoginActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/Title"
        android:layout_below="@+id/constraintLayout3"
        android:layout_centerHorizontal="true" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:layout_marginTop="0dp"
        android:background="@color/skyblue"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TRUST"
            android:textColor="@color/white"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </android.support.constraint.ConstraintLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:ems="10"
        android:id="@+id/ID"
        android:textSize="25sp"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Password"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="56dp"
        android:layout_alignTop="@+id/ID"
        android:layout_alignStart="@+id/ID" />


    <Button
        android:text="회원가입"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:id="@+id/Regist"
        android:textStyle="bold|italic"
        android:textColor="@color/colorAccent"
        android:background="@color/white"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/Password"
        android:layout_toEndOf="@+id/Login"
        android:layout_marginTop="42dp" />

    <Button
        android:text=" L o g i n "
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/Login"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        android:textColor="#0288D1"
        android:background="@color/white"
        android:layout_alignBaseline="@+id/Regist"
        android:layout_alignBottom="@+id/Regist"
        android:layout_alignStart="@+id/Password" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/Regist"
        android:background="@color/white"
        android:layout_alignStart="@+id/Login" />

</RelativeLayout>
