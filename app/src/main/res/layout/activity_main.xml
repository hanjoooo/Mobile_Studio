<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.khanj.trust.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/skyblue"
        android:id="@+id/constraintLayout3">

        <ImageButton
            android:id="@+id/bt_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_bt"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:id="@+id/bt_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_bt"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/setting"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRUST"
            android:textColor="@color/white"
            android:textSize="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="62dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:background="@color/md_grey_100">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="142dp"
                android:layout_height="137dp"
                app:srcCompat="@drawable/care"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trust"
                android:textColor="@color/md_blue_grey_600"
                android:textSize="22dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.32999998"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치확인 서비스 / 이동경로 서비스"
                android:textColor="@color/md_blue_grey_600"
                android:textSize="12dp"
                android:id="@+id/textView4"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안전지대 설정 서비스 / 상대방 상태 알림 서비스"
                android:textColor="@color/md_blue_grey_600"
                android:textSize="12dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="16dp"
                android:id="@+id/textView7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅 서비스 / 화상채팅 서비스"
                android:textColor="@color/md_blue_grey_600"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageView2" />
        </android.support.constraint.ConstraintLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:stretchColumns="*"
            android:layout_weight="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:background="@color/md_grey_600">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="1dp">

                <ImageView
                    android:id="@+id/bt_location"
                    android:background="@drawable/bt_selected1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/location"
                    android:layout_marginRight="1dp"/>

                <ImageView
                    android:id="@+id/bt_route"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bt_selected3"
                    app:srcCompat="@drawable/route" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">
                <ImageView
                    android:id="@+id/bt_chatting"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/chatting"
                    android:scaleType="centerInside"
                    android:background="@drawable/bt_selected2"
                    android:layout_marginRight="1dp"/>
                <ImageView
                    android:id="@+id/bt_facechatting"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/facechatting"
                    android:scaleType="centerInside"
                    android:background="@drawable/bt_selected"/>
            </TableRow>

        </TableLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
