<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/backb"
tools:context="com.example.khanj.trust.MainActivity">


<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/plus"
    android:id="@+id/bt_plus"
    android:background="@drawable/selector_bt"
    app:layout_constraintEnd_toStartOf="@+id/bt_setting"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="15dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="15dp"
    app:layout_constraintHorizontal_bias="0.0" />
<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/setting"
    android:id="@+id/bt_setting"
    android:background="@drawable/selector_bt"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="15dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="15dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:id="@+id/bt_location"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:background="@drawable/selector_bt"
            android:clickable="true"
            android:src="@drawable/location" />

        <ImageView
            android:id="@+id/bt_route"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/selector_bt"
            android:src="@drawable/route" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754">

        <ImageView
            android:id="@+id/bt_chatting"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/selector_bt"
            android:src="@drawable/chatting" />

        <ImageView
            android:id="@+id/bt_facechatting"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/selector_bt"
            android:src="@drawable/facechatting" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
