<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ivory"
    tools:context="com.example.khanj.trust.MainActivity">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/plus"
            android:id="@+id/bt_plus"
            android:background="@drawable/selector_bt"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/setting"
            android:id="@+id/bt_setting"
            android:layout_marginLeft="230dp"
            android:background="@drawable/selector_bt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:src="@drawable/turst1"
            android:background="@drawable/selector_bt"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/location"
                android:id="@+id/bt_location"
                android:background="@drawable/selector_bt"
                android:clickable="true"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/route"
                android:id="@+id/bt_route"
                android:background="@drawable/selector_bt"
                android:layout_marginLeft="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/bt_alarm"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/alarm"
                android:background="@drawable/selector_bt"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/bt_status"
                android:src="@drawable/status"
                android:layout_marginLeft="80dp"
                android:background="@drawable/selector_bt" />
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/bt_chatting"
            android:src="@drawable/chatting"
            android:background="@drawable/selector_bt" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_facechatting"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>
